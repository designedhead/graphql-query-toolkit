{
  "files": {
    "includes": ["src/**/*.ts", "src/**/*.js", "*.ts", "*.js"],
    "ignoreUnknown": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noExplicitAny": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  }
}