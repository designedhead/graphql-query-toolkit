{
  "name": "graphql-query-toolkit",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./core/*": {
      "types": "./dist/core/*.d.ts",
      "import": "./dist/core/*.js"
    },
    "./setup": {
      "types": "./dist/scripts/setup.d.ts",
      "import": "./dist/scripts/setup.js"
    }
  },
  "bin": {
    "query-gen": "./dist/cli.js",
    "query-codegen": "./dist/scripts/codegen.js"
  },
  "scripts": {
    "build": "tsc && cp src/cli.js dist/cli.js && cp src/scripts/codegen.mjs dist/scripts/codegen.js && chmod +x dist/cli.js && chmod +x dist/scripts/codegen.js",
    "dev": "tsc --noEmit --watch",
    "prepublishOnly": "npm run build",
    "lint": "biome check",
    "format": "biome format --write",
    "check-types": "tsc --noEmit",
    "gql": "graphql-codegen --config src/libs/gql/codegen.config.ts",
    "gql:watch": "graphql-codegen --config src/libs/gql/codegen.config.ts --watch"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "@tanstack/react-query": "^5.87.1",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "graphql-tag": "^2.12.6"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/client-preset": "^5.0.0",
    "@graphql-codegen/typescript": "^5.0.0",
    "@graphql-codegen/typescript-operations": "^5.0.0",
    "@graphql-codegen/typescript-react-query": "^6.1.1",
    "@graphql-codegen/typescript-graphql-request": "^6.3.0",
    "@types/node": "^20",
    "dotenv": "^17.2.2",
    "handlebars": "^4.7.8",
    "typescript": "^5"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=5.0.0",
    "graphql": ">=16.0.0"
  }
}
