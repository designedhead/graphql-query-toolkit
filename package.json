{
  "name": "graphql-query-toolkit",
  "version": "1.0.1",
  "private": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "query-gen": "./dist/cli.js",
    "query-codegen": "./dist/scripts/codegen.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsc --noEmit --watch",
    "prepublishOnly": "npm run build",
    "lint": "tsc && npx biome check",
    "format": "npx biome format --write",
    "check-types": "tsc --noEmit",
    "gql": "graphql-codegen --config src/libs/gql/codegen.config.ts",
    "gql:watch": "graphql-codegen --config src/libs/gql/codegen.config.ts --watch"
  },
  "dependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "@tanstack/react-query": ">=5.0.0",
    "graphql": ">=16.0.0",
    "graphql-request": "^7.2.0",
    "graphql-tag": "^2.12.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@changesets/cli": "^2.29.7",
    "@graphql-codegen/cli": "^6.0.0",
    "@graphql-codegen/client-preset": "^5.0.0",
    "@graphql-codegen/typescript": "^5.0.0",
    "@graphql-codegen/typescript-graphql-request": "^6.3.0",
    "@graphql-codegen/typescript-operations": "^5.0.0",
    "@graphql-codegen/typescript-react-query": "^6.1.1",
    "@types/node": "^20",
    "dotenv": "^17.2.2",
    "handlebars": "^4.7.8",
    "tsup": "^8.5.0",
    "typescript": "^5"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=5.0.0",
    "graphql": ">=16.0.0"
  }
}
